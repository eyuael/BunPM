{
  "name": "bunpm",
  "version": "1.0.0",
  "description": "A Bun-native process manager inspired by PM2",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "bun-pm": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "bun build src/cli/index.ts --outdir dist --target bun",
    "dev": "bun run src/cli/index.ts",
    "test": "bun test",
    "test:unit": "bun test test/*.test.ts",
    "test:integration": "bun test test/integration/*.test.ts --timeout 60000",
    "test:performance": "bun test test/performance/*.test.ts --timeout 120000",
    "test:performance-suite": "bun run test/performance/run-performance-suite.ts",
    "benchmark": "bun run test/performance/run-performance-suite.ts",
    "test:stress": "bun test test/stress/*.test.ts --timeout 180000",
    "test:e2e": "bun test test/e2e/*.test.ts --timeout 300000",
    "test:comprehensive": "bun run test/run-comprehensive-tests.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "bun",
    "process-manager",
    "pm2",
    "daemon",
    "clustering"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/node": "^24.3.0"
  }
}